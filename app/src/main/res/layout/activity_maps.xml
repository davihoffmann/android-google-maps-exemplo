<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/type_map_normal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/normal"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/type_map_satelite"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/satelite"
            android:layout_weight="1" />

        <Button
            android:id="@+id/type_map_terreno"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/terreno"
            android:layout_weight="1" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:map="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MapsActivity" />

        <Button
            android:layout_gravity="center_horizontal|bottom"
            android:layout_margin="8dp"
            android:id="@+id/marker_checker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cade_o_marker"/>

    </FrameLayout>



</LinearLayout>

